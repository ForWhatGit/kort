<!DOCTYPE html>
<html lang="en">
	<head>
		<meta content="text/html;charset=utf-8" http-equiv="Content-Type">
		<meta content="utf-8" http-equiv="encoding">
		<!-- Include JQuery -->
		<script type="text/javascript" src="jquery/jquery-3.2.1.min.js"></script>
		<!-- Include Bootstrap -->
		<script type="text/javascript" src="bootstrap/bootstrap-3.3.7.min.js"></script>
		<link rel="stylesheet" type="text/css" href="bootstrap/bootstrap.min.css" />
		<link rel="stylesheet" type="text/css" href="bootstrap/bootstrap-theme.min.css"/>
		<!-- Include kort css -->
		<!-- <link rel="stylesheet" type="text/css" href="../kort.css" /> -->

		<title>Kort: My Studies</title>
		<style>
			textarea {
				resize: none;
			}
			td {
			    padding: 5px;
			}
			/*.container {
				padding-left: 25px;
				width: 85%;
			}*/
		</style>
	  	<script>
	  	$( document ).ready(function() {
		    $('.accordion-title').click(function(event){
		  		event.target.classList.toggle("active");
		  		var panel = event.target.nextElementSibling;
		        if (panel.style.display === "block") {
		            panel.style.display = "none";
		        } else {
		            panel.style.display = "block";
		        }
		  	});
		});
		</script>
	</head>
	<body>
	
	<nav class="navbar navbar-default navbar-static-top">
		<div class="container-fluid">
		<a href ='#' class='navbar-brand'>Kort</a>
		    <ul class='nav navbar-nav'>
		    	<li><a href='/admin'>Administration</a></li>
			</ul>
		</div>
	</nav>
	<!-- <div id='header'>
		<div id='title'><span id='hamburger'>&#9776;</span>Kort</div>
	</div> -->

	<div class="container">
		<h2>My Studies</h2>
		<h4>Card Sorts</h4>
		<% for(var i=0; i<studies.length; i++) {%>
		<div class="panel-group">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4 class="panel-title">
						<a data-toggle="collapse" href="#collapse<%=i%>"><%= studies[i].title %></a>
					</h4>
				</div>
			<div id="collapse<%=i%>" class="panel-collapse collapse">
				<div class="panel-body">
					

					<form method="POST" action="/updateCardsort">
						<input hidden name='id' value='<%= studies[i]._id %>' />
						<table>
							<tr>
								<td colspan="2"><label for="title">Title</label><br><input name="title" id='title' type="text" value="<%= studies[i].title %>"></input></td>
							</tr>
							<tr>
								<td><label for="cards">Cards</label><br><textarea name="cards" rows="15" cols="20" id="cards"><%= studies[i].cards %></textarea></td>
								<td><label for="groups">Groups</label><br><textarea name="groups" rows="15" cols="20" id="groups"><%= studies[i].groups %></textarea></td>
							</tr>
							<tr>
								<td><button type="submit" class="btn btn-default">Update</button></td>
								<td><a style='color:red' href="/deleteCardsort/<%= studies[i]._id %>">Delete</a></td>
							</tr>
						</table>
						
					</form>
				</div>
			</div>
		</div>
		<% } %>
	</div>

	<form method="POST" action="/createCardsort">
		<button type="submit" class="btn btn-primary">Add Cardsort Study</button>
	</form>
	

	  	</div>
	</body>
</html>
