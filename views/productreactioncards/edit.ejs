<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('../partials/header.ejs') %>
		<title>Edit Product Reaction Study</title>
	</head>
	<body>
	<%- include('../partials/admin_header.ejs') %>
	<div class="container">
		<form method="POST" action="/updateproductreactioncards">
			<input hidden name='id' value='<%= singleStudy._id %>' />
			<div class='row'>
				<div class='col-sm-4'>
					<%- include('../partials/study_options/title.ejs') %>
					<%- include('../partials/study_options/status.ejs') %>
					<%- include('../partials/study_options/private.ejs') %>
				</div>
				<div class='col-sm-8'>
					<label for="words">Words</label><br><textarea style='width:100%' name="words" rows="15" cols="30" id="words"><% for(var j=0; j<singleStudy.data.words.length; j++) {%><%= singleStudy.data.words[j]+'\n' %><% } %></textarea>
				</div>
			</div>
			<div class='row'>
				<div class='col-sm-4'>
					<button type="submit" class="btn btn-primary">Save</button>
					<a href="/studies" class="btn btn-default" role="button">Cancel</a>
				</div>
			</div>

		</form>
	</div>			
	</body>
</html>
