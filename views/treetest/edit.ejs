<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('../partials/header.ejs') %>
		<title>Edit TreeTest</title>
	</head>
	<body>
	<%- include('../partials/admin_header.ejs') %>
	<div class="container">
		<form method="POST" action="/updatetreetest">
			<input hidden name='id' value='<%= singleStudy._id %>' />
			<div class='row'>
				<div class='col-sm-4'>
					<p><label for="title">Title</label><br><input style='width:100%' name="title" id='title' type="text" value="<%= singleStudy.title %>"></input>
					</p>
					<label for="active">Active</label><br>
				    <%if (singleStudy.active == true) { %>
				    <div class="radio-inline">
				     	<label><input type="radio" name="active" value='true' checked>Yes</label>
				    </div>
				    <div class="radio-inline">
						<label><input type="radio" name="active" value='false'>No</label>
				    </div>
				    <% } else { %>
				    <div class="radio-inline">
				     	<label><input type="radio" name="active" value='true'>Yes</label>
				    </div>
				    <div class="radio-inline">
						<label><input type="radio" name="active" value='false' checked>No</label>
				    </div> 
				    <% } %>
					<br>
				    <label for="selectableParents">Parents are selectable</label><br>
				    <%if (singleStudy.selectableParents == true) { %>
				    <div class="radio-inline">
				     	<label><input type="radio" name="selectableParents" value='true' checked>Yes</label>
				    </div>
				    <div class="radio-inline">
						<label><input type="radio" name="selectableParents" value='false'>No</label>
				    </div>
				    <% } else { %>
				    <div class="radio-inline">
				     	<label><input type="radio" name="selectableParents" value='true'>Yes</label>
				    </div>
				    <div class="radio-inline">
						<label><input type="radio" name="selectableParents" value='false' checked>No</label>
				    </div> 
				    <% } %>
				    <br>
				    <label for="showSiblings">Show siblings when selected</label><br>
				    <%if (singleStudy.showSiblings == true) { %>
				    <div class="radio-inline">
				     	<label><input type="radio" name="showSiblings" value='true' checked>Yes</label>
				    </div>
				    <div class="radio-inline">
						<label><input type="radio" name="showSiblings" value='false'>No</label>
				    </div>
				    <% } else { %>
				    <div class="radio-inline">
				     	<label><input type="radio" name="showSiblings" value='true'>Yes</label>
				    </div>
				    <div class="radio-inline">
						<label><input type="radio" name="showSiblings" value='false' checked>No</label>
				    </div> 
				    <% } %>
				</div>
				<div class='col-sm-8'>
					<label for="tasks">Tasks</label><br><textarea style='width:100%' name="tasks" rows="15" cols="30" id="tasks"><% for(var j=0; j<singleStudy.tasks.length; j++) {%><%= singleStudy.tasks[j]+'\n' %><% } %></textarea>
				</div>
			</div>
			<div class='row'>
				<div class='col-sm-12'>
					<label for="tree">Tree</label><br><textarea style='width:100%' name="tree" rows="15" cols="30" id="tree"><% for(var j=0; j<singleStudy.tree.length; j++) {%><%= singleStudy.tree[j]+'\n' %><% } %></textarea>
				</div>
			</div>
			<button type="submit" class="btn btn-primary">Save</button>
		</form>
	</div>			
	</body>
</html>
