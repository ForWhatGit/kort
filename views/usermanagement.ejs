<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('partials/header.ejs') %>
		<title>Kort: User Management</title>
	</head>
	<body>
	<%- include('partials/admin_header.ejs') %>
	<div class="container">
		<h1>User Management</h1>
		<table class='table table-condensed'>
			<thead>
				<tr>
				<th>Email</th>
				<th>Delete</th>
				</tr>
			</thead>
			<tbody>
				<% for(var i=0; i<users.length; i++) {%>
				<tr>
					<td><%= users[i].email %></td>
					<td><a href='/deleteuser/<%= users[i].email %>/'>Delete</a></td>
				</tr>
				<% } %>
			</tbody>
		</table>
	

		<hr>
		<h1>Add a User</h1>
		<form class="form-horizontal" action="/createuser" method="post">

			<div class="form-group row">
			  <label class="col-sm-1 control-label" style='text-align: left'>Email</label>
				<div class="col-sm-3 inputGroupContainer">
				<div class="input-group">
					<span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
					<input name="email" placeholder="Email Address" class="form-control" type="text" />
				</div>
			  </div>
			</div>

			<div class="form-group row">
			  <label class="col-sm-1 control-label " style='text-align: left'>Password</label>
				<div class="col-sm-3 inputGroupContainer">
				<div class="input-group">
					<span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
					<input name="password" placeholder="Password" class="form-control" type="password" />
				</div>
			  </div>
			</div>
			<button type="submit" class="btn btn-default" value="Create User">Create User</button>

		</form>
	</div>
	</body>
</html>
